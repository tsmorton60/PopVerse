{

"manifest_version":
    3,

"name":
    "PopVerse Bible Study System",

"short_name":
    "PopVerse",

"description":
    "Makes links of Bible refs for included KJV and BSB Bibles. View via popup or window. Supports reference entry and searching.",

"version":
    "2.5.1",

"background":{
    "service_worker": "background.js",
    "type": "module"
},

"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js":     ["browser.js"],
      "css":        ["popVerse.css"],
      "run_at":    "document_start"
    }
  ],

"icons":
    {"16":"icon16.png","48":"icon48.png","128":"icon128.png"},

"options_page":
    "options.html",

"web_accessible_resources": [{
    "resources": 
        ["chap.js", "options.js"],
    
    "matches": ["*://*/*"]
}],

"permissions": [
    "storage",
    "declarativeNetRequest"
],



"declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },



"host_permissions": [
    "<all_urls>"
],

"content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
},
    
"action":{
    "default_icon":"icon48.png",
    "default_popup":"popup.html"
    }
}